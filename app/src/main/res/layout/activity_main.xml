<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.wordpress.fourierfencing.fourierfencingclient.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="@drawable/score_border"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_horizontal"
                        android:padding="4dp"
                        android:text="Left Fencer"
                        android:textColor="#616161"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/increaseFencerA"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/uparrow"
                                android:onClick="increaseFencerA" />

                            <Button
                                android:id="@+id/decreaseFencerA"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/downarrow"
                                android:onClick="decreaseFencerA" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/team_a_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center_horizontal"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            android:text="0"

                            android:textColor="#000000"
                            android:textSize="60sp" />
                    </RelativeLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@color/colorPrimary"
                        android:onClick="addOneForFencerA"
                        android:text="1 Point" />


                </LinearLayout>

                <View
                    android:id="@+id/scoreborder"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray">

                </View>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center_horizontal"
                        android:padding="4dp"
                        android:text="Right Fencer"
                        android:textColor="#616161"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">

                            <Button
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/uparrow"
                                android:onClick="increaseFencerB" />

                            <Button
                                android:id="@+id/decreaseFencerB"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/downarrow"
                                android:onClick="decreaseFencerB" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/team_b_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center_horizontal"
                            android:paddingBottom="16dp"
                            android:paddingTop="16dp"
                            android:text="0"
                            android:textColor="#000000"

                            android:textSize="60sp" />
                    </RelativeLayout>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@color/colorPrimary"
                        android:onClick="addOneForFencerB"
                        android:text="1 Point" />


                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray">

            </View>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/colorPrimary"
                android:onClick="addBothFencers"
                android:text="Double" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:background="@drawable/score_border">

            <TextView
                android:id="@+id/timer_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="Timer"
                android:textColor="#616161"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/timer_banner"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:text="0:00"
                android:textColor="#000000"
                android:textSize="56sp" />

            <ToggleButton
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/timer"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimary"
                android:onClick="resetScore"
                android:text="Start"
                android:textOff="Resume"
                android:textOn="Pause"/>

            <TextView
                android:id="@+id/txtString"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/testView1"
                android:layout_alignParentBottom="true"
                android:text=""
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

